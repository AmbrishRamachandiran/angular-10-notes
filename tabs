// Import necessary dependencies
import React from 'react';
import { BrowserRouter as Router, Route, Link } from 'react-router-dom';
import { Tabs, Tab, Paper, Typography } from '@mui/material';

// Import your tab components
import TabComponent1 from './TabComponent1';
import TabComponent2 from './TabComponent2';

// Your main component using arrow functions
const Routes = () => (
  <Router>
    <div style={{ flexGrow: 1 }}>
      <Paper elevation={3} style={{ padding: '10px', marginBottom: '10px' }}>
        <Tabs>
          <Tab label="Tab 1" component={Link} to="/tab1" />
          <Tab label="Tab 2" component={Link} to="/tab2" />
        </Tabs>
      </Paper>

      <Route path="/tab1" component={TabComponent1} />
      <Route path="/tab2" component={TabComponent2} />
      {/* Add more routes for additional tabs */}

      {/* Optional: Add a default route or not-found component */}
      <Route exact path="/" render={() => <Typography variant="h5">Welcome to Backstage!</Typography>} />
    </div>
  </Router>
);

export default Routes;